#                                       Bindings
# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec $nsi pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec $nsi pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec $nsi pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec $nsi pactl set-source-mute @DEFAULT_SOURCE@ toggle

# start a terminal
bindsym $mod+Return exec $nsi kitty

# kill focused window
bindsym $mod+q kill

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# A more modern dmenu replacement is rofi:
bindcode $mod+40 exec $nsi "rofi -modes 'drun,run,filebrowser' -show drun"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# move focused window between monitors
bindsym $mod+n move container to output right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
# bindsym $mod+x split h

# split in vertical orientation
# bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+w layout toggle tabbed
bindsym $mod+x layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# switch to workspace
bindsym $mod+b workspace $ws1
bindsym $mod+g workspace $ws2
bindsym $mod+v workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+o workspace $ws6
bindsym $mod+p workspace $ws7
bindsym $mod+t workspace $ws8
bindsym $mod+s workspace $ws9
bindsym $mod+c workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+b move container to workspace $ws1
bindsym $mod+Shift+g move container to workspace $ws2
bindsym $mod+Shift+v move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+o move container to workspace $ws6
bindsym $mod+Shift+p move container to workspace $ws7
bindsym $mod+Shift+t move container to workspace $ws8
bindsym $mod+Shift+s move container to workspace $ws9
bindsym $mod+Shift+c move container to workspace $ws10

# reload the configuration file
# bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 2 px or 2 ppt
        bindsym j resize grow height 2 px or 2 ppt
        bindsym k resize shrink height 2 px or 2 ppt
        bindsym l resize grow width 2 px or 2 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 2 px or 2 ppt
        bindsym Down resize grow height 2 px or 2 ppt
        bindsym Up resize shrink height 2 px or 2 ppt
        bindsym Right resize grow width 2 px or 2 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec $nsi "ddccontrol dev:/dev/i2c-5 -r 0x10 -W 5 ; ddccontrol dev:/dev/i2c-6 -r 0x10 -W 5"
bindsym XF86MonBrightnessDown exec $nsi "ddccontrol dev:/dev/i2c-5 -r 0x10 -W -5 ; ddccontrol dev:/dev/i2c-6 -r 0x10 -W -5"

# Media player controls
bindsym XF86AudioPlay exec $nsi playerctl play-pause
bindsym XF86AudioNext exec $nsi playerctl next
bindsym XF86AudioPrev exec $nsi playerctl previous

# Take a screenshot upon pressing $mod+x (select an area)
# bindsym --release $mod+x exec $nsi import /tmp/latest-screenshot.png

# Clipboard Screenshots
bindsym $mod+comma exec $nsi maim | xclip -selection clipboard -t image/png
bindsym $mod+period exec $nsi maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym $mod+apostrophe exec $nsi maim --select | xclip -selection clipboard -t image/png

# Color picker
bindsym --release $mod+ctrl+c exec $nsi xcolor -s

bindsym $mod+e exec thunar

set $focus   #bd93f9
set $unfocus #303030
set $alert   #D9FF00
set $text    #F8F8F2

# class                 border   bground  text    indicator  child_border
client.focused          $focus   $focus   $text   $focus     $focus 
client.focused_inactive $unfocus $unfocus $text   $unfocus   $unfocus
client.unfocused        $unfocus $unfocus $text   $unfocus   $unfocus
client.urgent           $unfocus $alert   $text   $alert     $alert 
client.placeholder      $unfocus $unfocus $text   $unfocus   $unfocus

client.background       $text
